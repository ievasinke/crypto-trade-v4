{% extends 'layouts/app.html.twig' %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">Currencies</h1>
    <table class="bg-white border-separate border border-slate-500 w-full mb-4">
        <thead>
        <tr>
            <th class="border border-slate-600 px-4 py-2">Name</th>
            <th class="border border-slate-600 px-4 py-2">Symbol</th>
            <th class="border border-slate-600 px-4 py-2">Price</th>
        </tr>
        </thead>
        <tbody>
        {% for currency in currencies %}
            <tr>
                <td class="border border-slate-600 px-4 py-2"><a
                            href="/currencies/{{ currency.symbol }}">{{ currency.name }}</a>
                </td>
                <td class="border border-slate-600 px-4 py-2"><a
                            href="/currencies/{{ currency.symbol }}">{{ currency.symbol }}</a></td>
                <td class="border border-slate-600 px-4 py-2">{{ currency.price|number_format(2, '.', ' ') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <form action="/currency/search" method="POST" class="bg-white p-4 w-full max-w-sm">
        <div class="mb-4">
            <label for="symbol" class="block text-gray-700 text-sm font-bold mb-2">Currency Symbol:</label>
            <input type="text" id="symbol" name="symbol" required
                   class="shadow appearance-none border w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="flex items-center justify-between">
            <button type="submit"
                    class="bg-sky-500 hover:bg-sky-700 text-white font-bold py-2 px-4 focus:outline-none focus:shadow-outline">
                Search
            </button>
        </div>
    </form>
{% endblock %}
