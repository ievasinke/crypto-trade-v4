{% extends 'layouts/app.html.twig' %}

{% block content %}
    <h1 class="text-2xl font-bold">Currencies</h1>
    <table class="border-separate border border-slate-550">
        <thead>
        <tr>
            <th class="border border-slate-650">Name</th>
            <th class="border border-slate-650">Symbol</th>
            <th class="border border-slate-650">Price</th>
        </tr>
        </thead>
        <tbody>
        {% for currency in currencies %}
            <tr>

                <td class="border border-slate-650"><a
                            href="/currencies/{{ currency.symbol }}">{{ currency.name }}</a>
                </td>
                <td class="border border-slate-650"><a
                            href="/currencies/{{ currency.symbol }}">{{ currency.symbol }}</a></td>
                <td class="border border-slate-650">{{ currency.price|number_format(2, '.', ' ') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <form action="/currency/search" method="POST">
        <div>
            <label for="symbol">Currency symbol: </label>
            <input type="text" id="symbol" name="symbol" required class="shadow">
        </div>
        <button type="submit" class="bg-sky-500 hover:bg-sky-700">Search</button>
    </form>
{% endblock %}
