{% extends 'layouts/app.html.twig' %}

{% block content %}
    <h1 class="text-2xl font-bold mb-4">Transactions</h1>
    <table class="bg-white border-separate border border-slate-500 w-full mb-4">
        <thead>
        <tr>
            <th class="border border-slate-600 px-4 py-2">Kind</th>
            <th class="border border-slate-600 px-4 py-2">Symbol</th>
            <th class="border border-slate-600 px-4 py-2">Price</th>
            <th class="border border-slate-600 px-4 py-2">Quantity</th>
        </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td class="border border-slate-600 px-4 py-2">{{ transaction.kind }}</td>
                <td class="border border-slate-600 px-4 py-2">{{ transaction.symbol }}</td>
                <td class="border border-slate-600 px-4 py-2">${{ transaction.price|number_format(2, '.', ' ') }}</td>
                <td class="border border-slate-600 px-4 py-2">{{ transaction.quantity }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}